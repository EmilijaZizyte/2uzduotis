#include <iostream>
#include <iomanip>
#include <vector>
#include <string>
#include <algorithm>
#include <cctype>
#include <sstream>
#include <cstdlib>
#include <ctime>
#include <fstream>
#include <limits>
#include <chrono>

using namespace std;

struct Studentas {
    string vard;
    string pav;
    vector<int> paz;
    int egzas;
    double rezVid;
    double rezMed;
};

// Funkcij≈≥ deklaracijos
Studentas ivesk();
double mediana(const vector<int>& v);
void skaiciuokRezultatus(Studentas& s);
void nuskaitykDideliFailaTik(const string& failoVardas);
void generuokFailus();

int main() {
    srand((unsigned)time(0));
    vector<Studentas> Grupe;

    while (true) {
        cout << "\nPasirinkite:\n";
        cout << "1 - Prideti viena studenta\n";
        cout << "2 - Rodyti studentu rezultatus\n";
        cout << "3 - Baigti programa\n";
        cout << "6 - Parodyti kiek studentu neislaike egzamino\n";
        cout << "7 - Parodyti kiek studentu islaike egzamina\n";
        cout << "8 - Nuskaityti labai dideli faila (palyginimui)\n";
        cout << "9 - Generuoti testinius failus\n";
        cout << "Jusu pasirinkimas: ";

        int pasirinkimas;
        cin >> pasirinkimas;
        if (cin.fail()) {
            cin.clear();
            cin.ignore(10000, '\n');
            cout << "Bandykite dar karta\n";
            continue;
        }
        cin.ignore();

        if (pasirinkimas == 1) {
            Studentas Laik;
            int metode;
            cout << "Ar norite ivesti ranka (1) ar generuoti atsitiktinai (2)? ";
            cin >> metode;
            if (metode == 2) {
                int vardSkaicius = rand() % 100;
                int pavSkaicius = rand() % 100;
                Laik.vard = "vardas" + to_string(vardSkaicius);
                Laik.pav = "pavarde" + to_string(pavSkaicius);
                for (int i = 0; i < 5; i++) Laik.paz.push_back(rand() % 11);
                Laik.egzas = rand() % 11;
            }
            else Laik = ivesk();

            skaiciuokRezultatus(Laik);
            Grupe.push_back(Laik);
        }
        else if (pasirinkimas == 2) {
            if (Grupe.empty()) {
                cout << "Sarasas tuscias.\n";
                continue;
            }
            cout << left << setw(15) << "Vardas" << left << setw(15) << "Pavarde"
                << right << setw(15) << "Galutinis(Vid.)" << right << setw(15) << "Galutinis(Med.)" << endl;
            cout << string(60, '-') << "\n";
            for (const auto& s : Grupe)
                cout << left << setw(15) << s.vard << left << setw(15) << s.pav
                << right << setw(15) << fixed << setprecision(2) << s.rezVid
                << right << setw(15) << fixed << setprecision(2) << s.rezMed << endl;
        }
        else if (pasirinkimas == 3) {
            cout << "Programa baigta.\n";
            break;
        }
        else if (pasirinkimas == 6) {
            int kiekis = 0;
            for (const auto& s : Grupe) if (s.egzas < 5) ++kiekis;
            cout << "Neislaike egzamino: " << kiekis << endl;
        }
        else if (pasirinkimas == 7) {
            int kiekis = 0;
            for (const auto& s : Grupe) if (s.egzas >= 5) ++kiekis;
            cout << "Islaike egzamina: " << kiekis << endl;
        }
        else if (pasirinkimas == 8) {
            string failoVardas;
            cout << "Iveskite failo pavadinima: ";
            cin >> failoVardas;
            nuskaitykDideliFailaTik(failoVardas);
        }
        else if (pasirinkimas == 9) {
            generuokFailus();
        }
        else {
            cout << "Netinkamas pasirinkimas.\n";
        }
    }
    return 0;
}



Studentas ivesk() {
    Studentas Laik;
    cout << "Iveskite varda: "; cin >> Laik.vard;
    cout << "Iveskite pavarde: "; cin >> Laik.pav;
    cout << "Iveskite 5 pazymius: ";
    for (int i = 0; i < 5; i++) {
        int p; cin >> p; Laik.paz.push_back(p);
    }
    cout << "Iveskite egzamino pazymi: ";
    cin >> Laik.egzas;
    return Laik;
}

double mediana(const vector<int>& v) {
    vector<int> t = v;
    sort(t.begin(), t.end());
    int n = t.size();
    return n % 2 ? t[n / 2] : (t[n / 2 - 1] + t[n / 2]) / 2.0;
}

void skaiciuokRezultatus(Studentas& s) {
    double suma = 0;
    for (int p : s.paz) suma += p;
    double vid = suma / s.paz.size();
    s.rezVid = 0.4 * vid + 0.6 * s.egzas;
    s.rezMed = 0.4 * mediana(s.paz) + 0.6 * s.egzas;
}


void nuskaitykDideliFailaTik(const string& failoVardas) {
    ifstream in(failoVardas);
    if (!in) {
        cout << "Nepavyko atidaryti failo!\n";
        return;
    }

    stringstream buffer;
    auto start = chrono::high_resolution_clock::now();
    buffer << in.rdbuf();
    auto end = chrono::high_resolution_clock::now();
    cout << "Nuskaitymas i buferi uztruko: "
        << chrono::duration<double>(end - start).count() << " s\n";

    in.clear();
    in.seekg(0, ios::beg);
    string eil;
    size_t eiluciu = 0;

    start = chrono::high_resolution_clock::now();
    while (getline(in, eil)) eiluciu++;
    end = chrono::high_resolution_clock::now();

    cout << "Nuskaitymas eilutemis uztruko: "
        << chrono::duration<double>(end - start).count() << " s\n";
    cout << "Eiluciu skaicius: " << eiluciu << endl;
}


void generuokFailus() {
    vector<long long> dydziai = { 1000, 10000, 100000, 1000000, 10000000 };

    cout << "\nPradedamas testiniu failu generavimas...\n";

    for (long long kiekis : dydziai) {
        string pavadinimas = "studentai" + to_string(kiekis) + ".txt";
        ofstream out(pavadinimas);
        if (!out) {
            cout << "Nepavyko sukurti failo: " << pavadinimas << endl;
            continue;
        }

        
        out << left << setw(15) << "Vardas"
            << left << setw(15) << "Pavarde";
        for (int i = 1; i <= 5; i++) out << right << setw(6) << ("ND" + to_string(i));
        out << right << setw(6) << "Egz" << "\n";
        out << string(15 + 15 + 6 * 6, '-') << "\n";

        auto start = chrono::high_resolution_clock::now();

        for (long long i = 0; i < kiekis; i++) {
            int vardSkaicius = rand() % 10000;
            int pavSkaicius = rand() % 10000;

            out << left << setw(15) << ("vardas" + to_string(vardSkaicius))
                << left << setw(15) << ("pavarde" + to_string(pavSkaicius));

            for (int j = 0; j < 5; j++)
                out << right << setw(6) << (rand() % 11);

            out << right << setw(6) << (rand() % 11) << "\n";
        }

        auto end = chrono::high_resolution_clock::now();
        cout << "Failas " << setw(15) << pavadinimas
            << " sugeneruotas per "
            << fixed << setprecision(3)
            << chrono::duration<double>(end - start).count()
            << " s (" << kiekis << " irasai)\n";
    }

    cout << "\n Visi testiniai failai sugeneruoti sekmingai!\n";
}
